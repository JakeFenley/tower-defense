{
  "name": "afk-tower-defense",
  "version": "0.0.1",
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "public/afk-tower-defense.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf dist es lib",
    "build:esm": "tsc --module esnext --target es2015 --outDir ./es",
    "build:cjs": "tsc --module commonjs --target es5 --outDir ./lib",
    "build:umd": "rollup -c -w",
    "build": "run-s build:esm build:cjs build:umd",
    "prebuild": "run-s clean",
    "test": "karma start",
    "test-debug": "karma start --browsers=Chrome --single-run=false --debug",
    "test-watch": "karma start --browsers=Chrome --single-run=false --auto-watch",
    "coveralls": "cat ./test/coverage/lcov.info | coveralls",
    "pretest": "rimraf ./test/coverage",
    "prepare": "run-s build",
    "dev": "webpack serve"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -c tslint.json -p ./tsconfig.json --fix"
    ],
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€” staged"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/jasmine": "^3.6.0",
    "@types/lodash": "^4.14.172",
    "@typescript-eslint/parser": "^4.31.0",
    "coveralls": "^3.1.0",
    "devmoji": "^2.1.9",
    "husky": "^4.3.0",
    "jasmine-core": "^3.6.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.32.1",
    "rollup-plugin-filesize": "^9.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.0.0",
    "typescript": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
